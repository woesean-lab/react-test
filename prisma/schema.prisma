generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Template {
  id        Int      @id @default(autoincrement())
  label     String   @unique
  value     String
  category  String   @default("Genel")
  clickCount Int     @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  stars     TemplateStar[]
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
}

model Problem {
  id        Int      @id @default(autoincrement())
  username  String
  issue     String
  status    String   @default("open")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id              String  @id @default(cuid())
  name            String
  note            String?
  deliveryTemplate String?
  deliveryMessage String?
  stocks          Stock[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Stock {
  id        String  @id @default(cuid())
  code      String
  status    String  @default("available")
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String
  createdAt DateTime @default(now())
}

model EldoradoOffer {
  id        String   @id
  name      String
  price     String?
  category  String?
  href      String?
  kind      String
  missing   Boolean  @default(false)
  lastSeenAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model EldoradoOfferPrice {
  offerId   String   @id
  base      Float?
  percent   Float?
  result    Float?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model EldoradoSync {
  kind       String   @id
  lastSyncAt DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model EldoradoStockGroup {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  assignments EldoradoStockGroupAssignment[]
  keys      EldoradoKey[]
}

model EldoradoStockGroupAssignment {
  offerId String @id
  groupId String
  group   EldoradoStockGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
}

model EldoradoKey {
  id        String   @id @default(cuid())
  code      String
  status    String   @default("available")
  offerId   String?
  groupId   String?
  group     EldoradoStockGroup? @relation(fields: [groupId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model EldoradoOfferNote {
  offerId   String   @id
  note      String?
  updatedAt DateTime @updatedAt
}

model EldoradoNoteGroup {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  assignments EldoradoNoteGroupAssignment[]
  note      EldoradoNoteGroupNote?
}

model EldoradoNoteGroupAssignment {
  offerId String @id
  groupId String
  group   EldoradoNoteGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
}

model EldoradoNoteGroupNote {
  groupId String @id
  note    String?
  group   EldoradoNoteGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
}

model EldoradoMessageGroup {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  assignments EldoradoMessageGroupAssignment[]
  templates EldoradoMessageGroupTemplate[]
}

model EldoradoMessageGroupAssignment {
  offerId String @id
  groupId String
  group   EldoradoMessageGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
}

model EldoradoMessageGroupTemplate {
  groupId String
  label   String
  group   EldoradoMessageGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@id([groupId, label])
}

model EldoradoMessageTemplate {
  offerId String
  label   String

  @@id([offerId, label])
}

model EldoradoStockEnabled {
  offerId String  @id
  enabled Boolean @default(true)
}

model EldoradoOfferStar {
  offerId   String   @id
  createdAt DateTime @default(now())
}

model List {
  id        String   @id @default(cuid())
  name      String
  rows      Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Task {
  id            String   @id @default(cuid())
  title         String
  note          String?
  noteImages    String[] @default([])
  owner         String?
  status        String   @default("todo")
  dueType       String   @default("today")
  dueDate       String?
  repeatDays    String[] @default([])
  repeatWakeAt  String?
  comments      TaskComment[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model TaskComment {
  id         String   @id @default(cuid())
  taskId     String
  task       Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  authorId   String?
  authorName String
  text       String
  images     String[] @default([])
  createdAt  DateTime @default(now())
}

model Sale {
  id        String   @id @default(cuid())
  date      String   @unique
  amount    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Role {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  permissions String[] @default([])
  users       User[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model User {
  id           String   @id @default(cuid())
  username     String   @unique
  passwordHash String
  role         Role?    @relation(fields: [roleId], references: [id], onDelete: SetNull)
  roleId       Int?
  templateStars TemplateStar[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model TemplateStar {
  templateId Int
  userId     String
  createdAt  DateTime @default(now())
  template   Template @relation(fields: [templateId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([templateId, userId])
}
